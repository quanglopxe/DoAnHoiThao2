
@{
    ViewBag.Title = "EditProfile";
    Layout = "~/Views/Shared/_User-VN_Layout.cshtml";
}
@model WebHoiThao.Models.User

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Thông tin cá nhân</title>
    <link href="~/Content/css/style.css" rel="stylesheet">
    <style>
        .nav-link {
            color: black;
        }

            .nav-link:hover {
                color: white;
            }
    </style>
</head>
<body>
    <div class="container-xl px-4 mt-4">
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Ảnh đại diện</div>
                    <div class="card-body text-center">
                        <img class="img-account-profile rounded-circle mb-2" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS785biEGWYfQ3kCbvts_QRuNPn7IJpvovN4A&usqp=CAU" alt="">
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <div class="card mb-4">
                    <div class="card-header">Thông tin tài khoản</div>
                    <div class="card-body">
                        <form action="/User/EditProfile" method="post">
                            <input type="hidden" name="user_id" value="@Html.DisplayFor(model => model.user_id)" />
                            <input type="hidden" name="username" value="@Html.DisplayFor(model => model.username)" />
                            <input type="hidden" name="role" value="@Html.DisplayFor(model => model.role)" />
                            <div class="mb-3">
                                <label class="small mb-1" for="inputUsername">Tên người dùng</label>
                                <input name="username" value="@Html.DisplayFor(model => model.username)" readonly class="form-control" type="text" placeholder="Username" />
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputName">Họ Tên</label>
                                    <input name="full_name" value="@Html.DisplayFor(model => model.full_name)" class="form-control" id="inputName" type="text" placeholder="Họ tên" required />
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputEmail">Email</label>
                                    <input name="email" value="@Html.DisplayFor(model => model.email)" class="form-control" id="inputEmail" type="email" placeholder="Email" required />
                                </div>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputPassword">Password</label>
                                    <input name="password" value="@Html.DisplayFor(model => model.password)" class="form-control" id="inputPassword" type="password" placeholder="password" required />
                                </div>                                
                            </div>
                            <button class="btn btn-primary" type="submit">Sửa</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
