
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_User-VN_Layout.cshtml";
}
@model WebHoiThao.Models.User

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link href="~/Content/css/style.css" rel="stylesheet">
    <style>
        .nav-link {
            color: black;
        }

            .nav-link:hover {
                color: white;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="container py-5">
            <div class="row align-items-center">
                <div class="col-lg-7 mb-5 mb-lg-0">
                    <div class="mb-4">
                        <h2 class="text-primary mb-3" style="letter-spacing: 2px;">KHOA CÔNG NGHỆ THÔNG TIN</h2>
                        <h2 class="text-primary mb-3" style="letter-spacing: 2px;">ĐẠI HỌC CÔNG THƯƠNG</h2>
                        <b class="text-white">Bạn muốn tạo hoặc tham dự hội thảo?</b>
                    </div>
                    <hr />
                    <h2>
                        Seminar-Website sẽ hỗ trợ bạn tạo tài khoản và đăng nhập để sử dụng các chức năng như:
                    </h2>
                    <ul class="list-inline m-0" style="color:red">
                        <li class="py-2"><i class="fa fa-check text-primary mr-3"></i>Viết bài báo</li>
                        <li class="py-2"><i class="fa fa-check text-primary mr-3"></i>Review các bài báo</li>
                        <li class="py-2"><i class="fa fa-check text-primary mr-3"></i>Tạo cuộc hội thảo trực tuyến</li>
                    </ul>
                </div>
                <div class="col-lg-5">
                    <div class="card border-0">
                        <div class="card-header bg-light text-center p-4">
                            <h1 class="m-0">Đăng nhập</h1>
                        </div>
                        <div class="card-body rounded-bottom bg-primary p-5">
                            <form action="/User/Login" method="post">
                                <div class="form-group">
                                    <input name="username" type="text" class="form-control border-0 p-4" placeholder="Tên người dùng" required="required" />
                                </div>
                                <div class="form-group">
                                    <input name="password" type="password" class="form-control border-0 p-4" placeholder="Mật khẩu" required="required" />
                                </div>
                                <div>
                                    <button class="btn btn-dark btn-block border-0 py-3" type="submit">Đăng nhập</button>
                                </div>
                                <div class="pt-2">
                                    <div style="color: #fff; width: fit-content; margin-right: auto; margin-left: auto;">
                                        Chưa có tài khoản ? <a href="/User/Register" style="color: #44425A;"> Đăng ký</a>
                                    </div>
                                </div>
                                <br />
                                <b style="color:red;">@ViewBag.ErrorMessage</b>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>


